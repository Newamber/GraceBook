<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginTop="@dimen/basic_margin"
    android:layout_marginStart="@dimen/min_margin"
    android:layout_marginEnd="@dimen/min_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/elevation_card"
    app:cardCornerRadius="@dimen/radius_card_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview_item_today_hourMinute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/basic_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/text_main"/>

        <ImageView
            android:id="@+id/imageView_item_today_moneyType"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/basic_margin"
            android:layout_weight="1"
            android:contentDescription="@string/money_type"
            tools:src="@drawable/ic_internet_62"/>

        <TextView
            android:id="@+id/textView_item_today_moneyType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/basic_margin"
            android:layout_weight="2"
            android:gravity="start"
            android:paddingStart="@dimen/basic_margin"
            android:textColor="@color/colorBlackTextOrIcon"
            android:textSize="@dimen/text_main"
            tools:text="网购类型哦"/>

        <TextView
            android:id="@+id/textView_item_today_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="end"
            android:paddingEnd="@dimen/standard_margin"
            tools:text="￥123,456,789.5"
            android:textColor="@color/colorExpense"
            android:textSize="@dimen/text_main"/>

    </LinearLayout>

</android.support.v7.widget.CardView>