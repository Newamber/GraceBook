<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="@dimen/basic_margin"
        android:layout_marginStart="@dimen/basic_margin"
        android:layout_marginTop="@dimen/basic_margin"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <ImageView
                android:id="@+id/imageView_typeEdit_moneyRepoType"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/basic_margin"
                android:layout_weight="1"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_office_104"/>

            <TextView
                android:id="@+id/textView_typeEdit_moneyRepoType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/basic_margin"
                android:layout_weight="2"
                tools:text="啊啊啊啊啊"/>

            <TextView
                android:id="@+id/textView_typeEdit_initial_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/basic_margin"
                android:layout_weight="3"
                android:textColor="@color/colorIncome"
                tools:text="余额：55555￥"/>

            <ImageView
                android:id="@+id/imageView_typeEdit_dragIcon"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/basic_margin"
                android:layout_weight="1"
                android:contentDescription="@string/money_type"
                android:src="@drawable/ic_type_edit_drag"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>