<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newamber.gracebook.view.fragment.StreamFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_stream"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/basic_margin"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_back_to_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/standard_margin"
        android:src="@drawable/ic_fab_back_to_top"
        app:fabSize="normal"
        app:elevation="6dp"
        app:backgroundTintMode="multiply"
        app:rippleColor="@color/colorAccentRipple"/>
</android.support.design.widget.CoordinatorLayout>
