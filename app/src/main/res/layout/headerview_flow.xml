<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview_header_flow"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="1dp"
    android:layout_marginEnd="1dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="@dimen/radius_card_4"
    app:cardElevation="@dimen/elevation_card">

    <TextView
        android:id="@+id/textView_header_flow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/colorWhiteTextOrIcon"
        android:textSize="@dimen/text_add_account"
        android:paddingStart="@dimen/standard_margin"
        android:paddingTop="@dimen/basic_margin"
        android:paddingBottom="@dimen/basic_margin"
        android:gravity="center_vertical"
        tools:text="2017-05-28"/>

</android.support.v7.widget.CardView>