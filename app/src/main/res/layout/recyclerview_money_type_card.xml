<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_flow_period_title"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginTop="@dimen/basic_margin"
    android:layout_marginStart="@dimen/basic_margin"
    android:layout_marginEnd="@dimen/basic_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/elevation_card"
    app:cardCornerRadius="@dimen/radius_card_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_typeEdit_moneyType"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/basic_margin"
            android:layout_weight="1"
            tools:ignore="ContentDescription"
            tools:src="@drawable/ic_office_104"/>

        <TextView
            android:id="@+id/textView_typeEdit_moneyType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/basic_margin"
            android:layout_weight="4"
            tools:text="网购类型哦"/>

        <ImageView
            android:id="@+id/imageView_typeEdit_dragIcon"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/basic_margin"
            android:layout_weight="1"
            android:contentDescription="@string/money_type"
            android:src="@drawable/ic_type_edit_drag"/>

    </LinearLayout>

</android.support.v7.widget.CardView>