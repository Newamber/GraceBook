<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/basic_margin"
        android:layout_marginStart="@dimen/basic_margin"
        android:layout_marginEnd="@dimen/basic_margin"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_height="64dp"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/imageView_typeEdit_moneyType"
                android:layout_height="40dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/basic_margin"
                tools:src="@drawable/ic_office_104"
                android:layout_gravity="center_vertical"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/textView_typeEdit_moneyType"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/basic_margin"
                tools:text="@string/money_type_item"/>

            <ImageView
                android:id="@+id/imageView_typeEdit_dragIcon"
                android:layout_height="36dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/basic_margin"
                android:src="@drawable/ic_type_edit_drag"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/money_type"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>