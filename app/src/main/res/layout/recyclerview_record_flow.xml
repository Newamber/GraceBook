<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/headerview_flow"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="1dp"
        app:cardCornerRadius="@dimen/radius_card_4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textview_item_flow_hourMinute"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/basic_margin"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/hour_minute"
                android:textSize="@dimen/text_main"/>

            <ImageView
                android:id="@+id/imageView_item_flow_moneyType"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/basic_margin"
                android:layout_weight="1"
                android:contentDescription="@string/money_type"
                tools:src="@drawable/ic_internet_62"/>

            <TextView
                android:id="@+id/textView_item_flow_moneyType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/basic_margin"
                android:layout_weight="2"
                android:gravity="start"
                android:paddingStart="@dimen/basic_margin"
                android:textColor="@color/colorBlackTextOrIcon"
                android:textSize="@dimen/text_main"
                tools:text="@string/money_type_item"/>

            <TextView
                android:id="@+id/textView_item_flow_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="end"
                android:paddingEnd="@dimen/standard_margin"
                android:text="@string/amount_item"
                android:textColor="@color/colorExpense"
                android:textSize="@dimen/text_main"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


